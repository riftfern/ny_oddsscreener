{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "pnpm install",
  "buildCommand": "pnpm --filter @ny-sharp-edge/web build",
  "outputDirectory": "apps/web/dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/odds", "destination": "/api/odds" },
    { "source": "/api/ev", "destination": "/api/ev" },
    { "source": "/api/arbitrage", "destination": "/api/arbitrage" },
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
